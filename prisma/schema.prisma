// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // For email/password auth (hashed)
  image         String?
  lastfmUsername String   @unique // Required - same as Last.fm username
  lastfmSessionKey String? // Last.fm session key for authenticated API calls
  isSuperuser   Boolean  @default(false) // Superuser/admin access
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  friendshipsAsUser   Friendship[] @relation("UserFriendships")
  friendshipsAsFriend Friendship[] @relation("FriendFriendships")
  listeningStats      ListeningStat[]
  groupsCreated       Group[] @relation("GroupCreator")
  groupMemberships    GroupMember[]
  groupJoinRequests   GroupJoinRequest[]
  groupInvites         GroupInvite[]
  weeklyStats         UserWeeklyStats[]
  chartEntryVS        UserChartEntryVS[]
  groupCompatibilityScores GroupCompatibilityScore[]
  groupRecommendationRejections GroupRecommendationRejection[]
  recommendationCache GroupRecommendationCache?
  
  @@map("users")
}

model Friendship {
  id        String   @id @default(cuid())
  userId    String
  friendId  String
  status    String   @default("pending") // pending, accepted, blocked
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user   User @relation("UserFriendships", fields: [userId], references: [id], onDelete: Cascade)
  friend User @relation("FriendFriendships", fields: [friendId], references: [id], onDelete: Cascade)
  
  @@unique([userId, friendId])
  @@map("friendships")
}

model ListeningStat {
  id          String   @id @default(cuid())
  userId      String
  trackName   String
  artistName  String
  albumName   String?
  playCount   Int      @default(1)
  lastPlayed  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([trackName, artistName])
  @@map("listening_stats")
}

model Group {
  id               String   @id @default(cuid())
  name             String
  image            String?  // Group icon/image URL
  creatorId        String
  isPrivate        Boolean  @default(false) // If true, group is private and not viewable publicly
  allowFreeJoin    Boolean  @default(false) // If true, users can join freely without approval (only for public groups)
  chartSize        Int      @default(10) // Chart size: 10, 20, 50, or 100
  chartMode        String   @default("vs") // Chart mode: "vs", "vs_weighted", or "plays_only"
  trackingDayOfWeek Int    @default(0) // Day of week for tracking (0=Sunday, 1=Monday, ..., 6=Saturday)
  dynamicIconEnabled Boolean @default(false) // Enable dynamic icon updates from weekly charts
  dynamicIconSource String? // Source type: 'top_artist', 'top_album', or 'top_track_artist'
  colorTheme        String? @default("white") // Color theme: 'yellow', 'royal_blue', 'cyan', 'bright_red', 'maroon', 'graphite', 'hot_pink', 'neon_green', 'white'
  chartGenerationInProgress Boolean @default(false) // Lock flag to prevent concurrent chart updates
  chartGenerationStartedAt DateTime? // Timestamp for timeout detection
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  creator     User            @relation("GroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members     GroupMember[]
  joinRequests GroupJoinRequest[]
  invites     GroupInvite[]
  weeklyStats GroupWeeklyStats[]
  chartEntries GroupChartEntry[]
  allTimeStats GroupAllTimeStats?
  compatibilityScores GroupCompatibilityScore[]
  recommendationRejections GroupRecommendationRejection[]
  
  @@map("groups")
}

model GroupMember {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  joinedAt  DateTime @default(now())
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([groupId, userId])
  @@map("group_members")
}

model UserWeeklyStats {
  id        String   @id @default(cuid())
  userId    String
  weekStart DateTime // Sunday 00:00 UTC
  weekEnd   DateTime // Next Sunday 00:00 UTC
  topArtists Json    // Array of {name: string, playcount: number}
  topTracks  Json    // Array of {name: string, artist: string, playcount: number}
  topAlbums  Json    // Array of {name: string, artist: string, playcount: number}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, weekStart])
  @@index([userId, weekStart])
  @@map("user_weekly_stats")
}

model GroupWeeklyStats {
  id        String   @id @default(cuid())
  groupId   String
  weekStart DateTime // Sunday 00:00 UTC
  weekEnd   DateTime // Next Sunday 00:00 UTC
  topArtists Json    // Array of {name: string, playcount: number}
  topTracks  Json    // Array of {name: string, artist: string, playcount: number}
  topAlbums  Json    // Array of {name: string, artist: string, playcount: number}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  @@unique([groupId, weekStart])
  @@index([groupId, weekStart])
  @@map("group_weekly_stats")
}

model GroupChartEntry {
  id                String   @id @default(cuid())
  groupId           String
  weekStart         DateTime // Sunday 00:00 UTC
  chartType         String   // "artists" | "tracks" | "albums"
  entryKey          String   // Normalized key: name for artists, "name|artist" for tracks/albums
  name              String
  artist            String?   // For tracks and albums
  position          Int      // 1-10
  playcount         Int
  vibeScore         Float?   // Aggregated Vibe Score for this entry
  positionChange    Int?     // null for new entries, negative = moved up, positive = moved down
  playsChange       Int?     // null for new entries
  totalWeeksAppeared Int     // Count of weeks this entry appears in up to this week
  highestPosition   Int      // Best position across all weeks up to this week
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  @@unique([groupId, weekStart, chartType, entryKey])
  @@index([groupId, weekStart, chartType])
  @@index([groupId, chartType, entryKey])
  @@map("group_chart_entries")
}

model GroupAllTimeStats {
  id          String   @id @default(cuid())
  groupId     String   @unique
  topArtists  Json     // Array of {name: string, playcount: number}
  topTracks   Json     // Array of {name: string, artist: string, playcount: number}
  topAlbums   Json     // Array of {name: string, artist: string, playcount: number}
  lastUpdated DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  @@map("group_all_time_stats")
}

model GroupJoinRequest {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  status    String   @default("pending") // pending, accepted, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([groupId, userId])
  @@index([groupId, status])
  @@map("group_join_requests")
}

model GroupInvite {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  status    String   @default("pending") // pending, accepted, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([groupId, userId])
  @@index([groupId, status])
  @@index([userId, status])
  @@map("group_invites")
}

model UserChartEntryVS {
  id        String   @id @default(cuid())
  userId    String
  weekStart DateTime // Sunday 00:00 UTC
  chartType String   // "artists" | "tracks" | "albums"
  entryKey  String   // Normalized key: name for artists, "name|artist" for tracks/albums
  vibeScore Float    // User's VS contribution for this entry (calculated from top 100)
  playcount Int      // User's playcount for this entry, for reference
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, weekStart, chartType, entryKey])
  @@index([userId, weekStart])
  @@index([userId, weekStart, chartType])
  @@map("user_chart_entry_vs")
}

model GroupCompatibilityScore {
  id            String   @id @default(cuid())
  userId        String
  groupId       String
  score         Float    // 0-100 compatibility score
  artistOverlap Float    // Component score
  trackOverlap  Float    // Component score
  genreOverlap  Float    // Component score
  patternScore  Float    // Component score
  lastCalculated DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  @@unique([userId, groupId])
  @@index([userId, score])
  @@index([groupId])
  @@map("group_compatibility_scores")
}

model GroupRecommendationRejection {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  @@unique([userId, groupId])
  @@index([userId])
  @@map("group_recommendation_rejections")
}

model ArtistGenre {
  id          String   @id @default(cuid())
  artistName  String   @unique // Normalized: toLowerCase()
  genres      Json     // Array of genre strings from Last.fm
  lastFetched DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([artistName])
  @@map("artist_genres")
}

model GroupRecommendationCache {
  id            String   @id @default(cuid())
  userId        String   @unique
  recommendations Json   // Array of recommendation groups with scores
  lastCalculated DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("group_recommendation_cache")
}

