// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?   // For email/password auth (hashed)
  image         String?
  lastfmUsername String   @unique // Required - same as Last.fm username
  lastfmSessionKey String? // Last.fm session key for authenticated API calls
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  friendshipsAsUser   Friendship[] @relation("UserFriendships")
  friendshipsAsFriend Friendship[] @relation("FriendFriendships")
  listeningStats      ListeningStat[]
  groupsCreated       Group[] @relation("GroupCreator")
  groupMemberships    GroupMember[]
  weeklyStats         UserWeeklyStats[]
  
  @@map("users")
}

model Friendship {
  id        String   @id @default(cuid())
  userId    String
  friendId  String
  status    String   @default("pending") // pending, accepted, blocked
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user   User @relation("UserFriendships", fields: [userId], references: [id], onDelete: Cascade)
  friend User @relation("FriendFriendships", fields: [friendId], references: [id], onDelete: Cascade)
  
  @@unique([userId, friendId])
  @@map("friendships")
}

model ListeningStat {
  id          String   @id @default(cuid())
  userId      String
  trackName   String
  artistName  String
  albumName   String?
  playCount   Int      @default(1)
  lastPlayed  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([trackName, artistName])
  @@map("listening_stats")
}

model Group {
  id          String   @id @default(cuid())
  name        String
  description String?
  image       String?  // Group icon/image URL
  creatorId   String
  isPrivate   Boolean  @default(false) // If true, group is private and not viewable publicly
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  creator     User            @relation("GroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members     GroupMember[]
  weeklyStats GroupWeeklyStats[]
  chartEntries GroupChartEntry[]
  
  @@map("groups")
}

model GroupMember {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  joinedAt  DateTime @default(now())
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([groupId, userId])
  @@map("group_members")
}

model UserWeeklyStats {
  id        String   @id @default(cuid())
  userId    String
  weekStart DateTime // Sunday 00:00 UTC
  weekEnd   DateTime // Next Sunday 00:00 UTC
  topArtists Json    // Array of {name: string, playcount: number}
  topTracks  Json    // Array of {name: string, artist: string, playcount: number}
  topAlbums  Json    // Array of {name: string, artist: string, playcount: number}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, weekStart])
  @@index([userId, weekStart])
  @@map("user_weekly_stats")
}

model GroupWeeklyStats {
  id        String   @id @default(cuid())
  groupId   String
  weekStart DateTime // Sunday 00:00 UTC
  weekEnd   DateTime // Next Sunday 00:00 UTC
  topArtists Json    // Array of {name: string, playcount: number}
  topTracks  Json    // Array of {name: string, artist: string, playcount: number}
  topAlbums  Json    // Array of {name: string, artist: string, playcount: number}
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  @@unique([groupId, weekStart])
  @@index([groupId, weekStart])
  @@map("group_weekly_stats")
}

model GroupChartEntry {
  id                String   @id @default(cuid())
  groupId           String
  weekStart         DateTime // Sunday 00:00 UTC
  chartType         String   // "artists" | "tracks" | "albums"
  entryKey          String   // Normalized key: name for artists, "name|artist" for tracks/albums
  name              String
  artist            String?   // For tracks and albums
  position          Int      // 1-10
  playcount         Int
  positionChange    Int?     // null for new entries, negative = moved up, positive = moved down
  playsChange       Int?     // null for new entries
  totalWeeksAppeared Int     // Count of weeks this entry appears in up to this week
  highestPosition   Int      // Best position across all weeks up to this week
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  @@unique([groupId, weekStart, chartType, entryKey])
  @@index([groupId, weekStart, chartType])
  @@index([groupId, chartType, entryKey])
  @@map("group_chart_entries")
}

